<body class="registerpage">
  <div class="row hcenter vcenter nomargin">
    <div class="col s12 m6 nomargin">
      <div class="card blue-grey darken-1 nomargin">
        <div class="card-content white-text nomargin">
          <div id="spandiv">
            <span class="card-title centerSpan">Sign Up</span>
          </div>
          <div class="row nomargin">
            <form class="col s12">
              <div class="row nomargin">
                <div class="input-field col s6 margin10">
                  <input id="first_name" type="text" class="validate">
                  <label for="first_name">First Name</label>
                </div>
                <div class="input-field col s6 margin10">
                  <input id="last_name" type="text" class="validate">
                  <label for="last_name">Last Name</label>
                </div>
              </div>
              <div class="row nomargin">
                <div class="input-field col s12 margin10">
                  <input id="email" type="email" class="validate">
                  <label for="email">Email</label>
                </div>
              </div>
              <div class="row nomargin">
                <div class="input-field col s12 margin10">
                  <input id="password" type="password" class="validate">
                  <label for="password">Password</label>
                </div>
              </div>
              <div class="row nomargin">
                <div class="input-field col s12 margin10">
                  <input id="rpassword" type="password" class="validate">
                  <label for="rpassword">Repeat Password</label>
                </div>
              </div>
              <div class="row nomargin">
                <div class="input-field col s12 margin10">
                  <input id="icon_telephone" type="tel" class="validate">
                  <label for="icon_telephone">Mobile Number</label>
                </div>
              </div>
              <div class="row nomargin">
                <div class="input-field col s6 margin10">
                  <input id="streetAddress" type="text" class="validate">
                  <label for="streetAddress">Address</label>
                </div>
                <div class="input-field col s6 margin10">
                  <input id="zipcode" type="text" class="validate">
                  <label for="zipcode">Zipcode</label>
                </div>
              </div>
              <div class="row nomargin">
                <div class="input-field col s6 margin10">
                  <input id="school" type="text" class="validate">
                  <label for="school">School</label>
                </div>
                <div class="input-field col s6 margin10">
                  <input id="schoolYear" type="text" class="validate">
                  <label for="schoolYear">Year</label>
                </div>
              </div>
            </form>
          </div>
          <div class="card-action center">
            <a href="profile" class="waves-effect waves-light btn-large">Get Started</a>
          </div>
        </div>
      </div>
    </div>
</body>

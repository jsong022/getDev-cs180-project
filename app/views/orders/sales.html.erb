<div class="profileSeparator" style="border: 0px"></div>

<div class="flexProfile card center z-depth-2 ">
  <div class="card-title">Sales History</div>

  <table class="table table-striped table-bordered">
    <tr>
      <th class="center">Item</th>
      <th class="center">Price</th>
      <th class="center">Customer</th>
      <th class="center">Date Sold</th>
    </tr>
  
    <% @orders.each do |order| %>
      <tr>
        <td class="center"><%= order.listing.name %></td>
        <td class="center"><%= number_to_currency(order.listing.price) %></td>
        <td class="center"><%= order.buyer.first_name + " " + order.buyer.last_name %></td>
        <td class="center"><%= order.created_at.strftime("%B %-d, %Y") %></td>
      </tr>
    <% end %>
  </table>
  <div class="flexProfile flexProfile_last" style="border: 0px"></div>
</div>


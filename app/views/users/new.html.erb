<!-- It's here because users controller's new action -->
<!-- should be the sign up page to create new actions -->

<% provide(:title, 'Sign up') %>
  
  <div class="row">
    <div class="col s6">
      <div class="card blue-grey darken-1">
        <ul class="tabs">
          <li class="tab col s2"><a href="loginTab">Login</a></li>
          <li class="tab col s2"><a class="active" href="#signupTab">Sign Up</a></li>
        </ul>
        <div class="card-content white-text">
          <%=form_for(@user) do |f| %>
            <%=render 'shared/error_messages' %>

              <div class="input-field">
                <%=f.text_field :first_name, class: 'form-control' %>
                  <label for="firstName">First Name</label>
              </div>

              <div class="input-field">
                <%=f.text_field :last_name, class: 'form-control' %>
                  <label for="lastName">Last Name</label>
              </div>

              <div class="input-field">
                <%=f.text_field :username, class: 'form-control' %>
                  <label for="username">Username</label>
              </div>

              <div class="input-field">
                <%=f.email_field :email, class: 'form-control' %>
                  <label for="email">Email</label>
              </div>

              <div class="input-field">
                <%=f.password_field :password, class: 'form-control' %>
                  <label for="password">Password</label>
              </div>

              <div class="input-field">
                <%=f.password_field :password_confirmation, class: 'form-control' %>
                  <label for="passwordConfirmation">Password Confirmation</label>
              </div>

              <%=f.submit "Sign Up", class: "btn btn-primary" %>
                <% end %>
        </div>
      </div>
    </div>
  </div>

<script>
  $(document).ready(function(){
    $('ul.tabs').tabs();
  });
</script>